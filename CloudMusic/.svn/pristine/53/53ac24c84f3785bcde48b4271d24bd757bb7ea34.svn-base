<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/lv_my_music_category"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_200"
        app:layout_widthPercent="20%"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/lv_my_music_category"
        android:layout_toRightOf="@id/lv_my_music_category"
        app:layout_marginBottomPercent="6%"
        app:layout_marginLeftPercent="1.5%"
        app:layout_widthPercent="80%">

        <ListView
            android:id="@+id/lv_dynamic_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</android.support.percent.PercentRelativeLayout>