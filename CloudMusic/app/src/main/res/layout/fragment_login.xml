<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play_interface_background"
    >

    <com.jinxin.cloudmusic.view.PercentLinearLayout
        android:layout_width="@dimen/space_0"
        android:layout_height="@dimen/space_0"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        app:layout_aspectRatio="@fraction/login_window_ratio"
        app:layout_heightPercent="60%"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/account"
            android:textColor="@color/white"
            android:textSize="@dimen/text_30"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="74%"
            />

        <EditText
            android:id="@+id/useraccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/editusr"
            android:drawableStart="@drawable/editusr"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            app:layout_heightPercent="12.5%"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="74%"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/password"
            android:textColor="@color/white"
            android:textSize="@dimen/text_30"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="74%"
            />

        <EditText
            android:id="@+id/userpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/editpd"
            android:drawableStart="@drawable/editpd"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            app:layout_heightPercent="12.5%"
            app:layout_marginTopPercent="5%"
            app:layout_widthPercent="74%"
            />

        <Button
            android:id="@+id/review_act_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sure"
            app:layout_heightPercent="18%"
            android:textSize="@dimen/text_20"
            app:layout_marginTopPercent="10%"
            app:layout_widthPercent="40%"
            />
    </com.jinxin.cloudmusic.view.PercentLinearLayout>
</android.support.percent.PercentRelativeLayout>