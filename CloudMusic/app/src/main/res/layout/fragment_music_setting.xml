<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music_setting"
    >
    <ImageView
        android:id="@+id/iv_setting_music_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="1.5%"
        android:src="@drawable/setting_close"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="8%"
        app:layout_heightPercent="12%"/>
    <TextView
        android:id="@+id/more_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_30"
        app:layout_marginTopPercent="17%"
        android:layout_alignParentLeft="true"
        app:layout_marginLeftPercent="2%"
        android:text="@string/more_setting"/>
    <Button
        android:id="@+id/btn_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_30"
        app:layout_marginTopPercent="17%"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="3%"
        android:background="@null"
        android:text="@string/complete"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_below="@id/more_setting"
        app:layout_marginTopPercent="1.5%"
        android:background="@drawable/music_setting_line"/>
    <ListView
        android:id="@+id/lv_music_setting_category"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_250"
        app:layout_marginTopPercent="27%"
        app:layout_widthPercent="20%"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/lv_music_setting_category"
        android:layout_toRightOf="@id/lv_music_setting_category"
        app:layout_marginBottomPercent="6%"
        app:layout_marginLeftPercent="1.5%"
        app:layout_marginTopPercent="27%"
        app:layout_widthPercent="80%">

        <ListView
            android:id="@+id/lv_setting_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</android.support.percent.PercentRelativeLayout>