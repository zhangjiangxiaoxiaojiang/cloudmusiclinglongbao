<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="afterDescendants"
    android:layout_height="@dimen/space_80">

    <TextView
        android:id="@+id/tv_music_list_detail_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_15"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_60"
        android:textSize="@dimen/text_25" />

    <TextView
        android:id="@+id/tv_music_list_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_music_list_detail_num"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_25" />

    <TextView
        android:id="@+id/tv_music_list_detail_songer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_music_list_detail_name"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_centerVertical="true"
        android:textColor="@color/darkgrey"
        android:textSize="@dimen/text_25" />

    <ImageView
        android:id="@+id/iv_music_list_detail_download"
        android:layout_width="@dimen/space_30"
        android:layout_height="@dimen/space_30"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:layout_marginRight="@dimen/space_120"
        android:layout_centerVertical="true"
        android:src="@drawable/download"/>
    <ImageView
        android:id="@+id/iv_music_list_detail_collect"
        android:layout_width="@dimen/space_28"
        android:layout_height="@dimen/space_28"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_25"
        android:src="@drawable/collect"/>
</RelativeLayout>